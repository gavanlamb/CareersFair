@using CareersFair.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@section stylesheet{
    @Styles.Render("~/style/ionicons")
    @Styles.Render("~/style/account")
    @Styles.Render("~/style/main")
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6  col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            <h1>@ViewBag.Title</h1>
            <div class="errors">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <span class="login-icon ion-ios-person-outline"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <span class="checkbox">
                                    <input checked="checked" data-val="true" data-val-required="The Remember me? field is required." id="RememberMe" name="RememberMe" type="checkbox" value="true">
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkboxlabel" })
                                    <input name="RememberMe" type="hidden" value="false">
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <a href="@Url.Action("ForgotPassword", "Account")" class="btn pull-left" id="help">
                                    <span class="ion-ios-help-empty"></span>
                                </a>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <button type="submit" value="Log in" class="btn pull-right" id="finish">
                                    <span class="ion-ios-checkmark-empty"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/script/jqueryvalidation")
}